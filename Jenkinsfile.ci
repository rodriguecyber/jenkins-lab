pipeline {
  agent any

  tool {
        nodejs "nodejs"
    }
    stages {
       
        stage('Install Dependencies') {
            steps { sh 'npm install' }
        }
        stage('Test') {
            steps { sh 'npm test' }
        }
        stage('Build Docker Image') {
            steps { sh 'docker build -t rwigara/my-facial-recognition-app .' }
        }
        
    }
}
